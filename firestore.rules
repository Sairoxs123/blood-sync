rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    // Stores user profile information
    match /users/{userId} {
      // Users can read their own document
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can create their own document on first login
      allow create: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.email == request.auth.token.email;

      // Users can update their own document
      allow update: if request.auth != null && request.auth.uid == userId;

      // Prevent deletion (set to true if you want users to delete their accounts)
      allow delete: if false;
    }

    // Camps collection
    // Stores blood donation camp sessions (active and inactive)
    match /camps/{campId} {
      // Anyone authenticated can read active camps
      // Coordinators can read their own inactive camps (for history)
      allow read: if request.auth != null && (
        resource.data.status == 'active' ||
        (resource.data.status == 'inactive' && resource.data.coordinator_uid == request.auth.uid)
      );

      // Only authenticated coordinators can create camps
      allow create: if request.auth != null
        && request.resource.data.coordinator_uid == request.auth.uid;

      // Only the coordinator who created the camp can update it
      // (Updates used for inventory changes and ending camp)
      allow update: if request.auth != null
        && resource.data.coordinator_uid == request.auth.uid;

      // Only the coordinator who created the camp can delete it
      allow delete: if request.auth != null
        && resource.data.coordinator_uid == request.auth.uid;
    }

    // Requests collection
    // Stores blood requests from hospitals to specific camps
    match /requests/{requestId} {
      // Authenticated users can read all requests
      allow read: if request.auth != null;

      // Only authenticated users can create requests
      allow create: if request.auth != null;

      // Only authenticated users can update request status
      allow update: if request.auth != null;

      // Only the user who created the request can delete it
      allow delete: if request.auth != null
        && resource.data.requested_by == request.auth.uid;
    }

    // Donors collection
    // Stores donor information for each blood donation
    match /donors/{donorId} {
      // Authenticated users can read all donor records
      allow read: if request.auth != null;

      // Only authenticated users can create donor records
      // The camp_id must reference an existing active camp
      allow create: if request.auth != null
        && request.resource.data.camp_id != null
        && request.resource.data.donor_id != null
        && request.resource.data.contact != null
        && request.resource.data.blood_type != null
        && request.resource.data.units != null;

      // Only the coordinator of the associated camp can update donor records
      allow update: if request.auth != null
        && exists(/databases/$(database)/documents/camps/$(resource.data.camp_id))
        && get(/databases/$(database)/documents/camps/$(resource.data.camp_id)).data.coordinator_uid == request.auth.uid;

      // Only the coordinator of the associated camp can delete donor records
      allow delete: if request.auth != null
        && exists(/databases/$(database)/documents/camps/$(resource.data.camp_id))
        && get(/databases/$(database)/documents/camps/$(resource.data.camp_id)).data.coordinator_uid == request.auth.uid;
    }
  }
}
